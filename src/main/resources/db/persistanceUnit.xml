<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

  <persistence-unit name="persistenceUnit">
    <class>reservations.security.domain.ScopeEntity</class>
    <class>reservations.security.domain.UserScopeEntity</class>
    <class>reservations.security.domain.UserEntity</class>
    <class>reservations.security.domain.AuthorizationCodeEntity</class>
    <properties>
      <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306"/>
      <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>
    </properties>
  </persistence-unit>
</persistence>
